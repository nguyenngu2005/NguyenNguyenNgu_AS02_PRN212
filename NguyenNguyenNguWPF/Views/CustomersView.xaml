<UserControl x:Class="NguyenNguyenNguWPF.Views.RoomsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Background="{DynamicResource HotelPrimaryBrush}">

    <UserControl.Resources>

        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource HotelButtonStyle}">
            <Setter Property="IsEnabled" Value="True"/>
            <!-- Mặc định là bật -->
            <Style.Triggers>
                <!-- Chỉ cần MỘT khối Style.Triggers -->
                <DataTrigger Binding="{Binding SelectedItem}" Value="{x:Null}">
                    <Setter Property="IsEnabled" Value="False"/>
                    <!-- Tắt khi SelectedItem là null -->
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Các Style cho DataGrid -->
        <Style x:Key="HotelDataGridColumnHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
            <Setter Property="Foreground" Value="{DynamicResource HotelAccentBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="BorderBrush" Value="{DynamicResource HotelBorderBrush}"/>
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <Style x:Key="HotelDataGridCellStyle" TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
            <Setter Property="Foreground" Value="{DynamicResource HotelForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,8"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HotelHighlightBrush}"/>
                    <Setter Property="Foreground" Value="{DynamicResource HotelPrimaryBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="HotelDataGridStyle" TargetType="DataGrid" BasedOn="{StaticResource {x:Type DataGrid}}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowBackground" Value="Transparent"/>
            <Setter Property="AlternatingRowBackground" Value="Transparent"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="ColumnHeaderStyle" Value="{StaticResource HotelDataGridColumnHeaderStyle}"/>
            <Setter Property="CellStyle" Value="{StaticResource HotelDataGridCellStyle}"/>
        </Style>

    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">

            <TextBox Width="260"
                     Text="{Binding Keyword, UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="Search by name/email/phone"
                     Style="{DynamicResource HotelTextBoxStyle}" 
                     Height="45"
                     FontSize="14"/>

            <Button Content="Search"
                    Command="{Binding SearchCommand}"
                    Margin="12,0,0,0"
                    Style="{DynamicResource HotelButtonStyle}"
                    Background="{DynamicResource HotelHighlightBrush}" 
                    Foreground="{DynamicResource HotelPrimaryBrush}"
                    Width="100"
                    Height="45"/>

            <Button Content="New"
                    Command="{Binding NewCommand}"
                    Margin="30,0,0,0"
                    Style="{DynamicResource HotelButtonStyle}"
                    Background="{DynamicResource HotelAccentBrush}" 
                    Foreground="{DynamicResource HotelPrimaryBrush}"
                    Width="100"
                    Height="45"/>

            <Button Content="Edit"
                    Command="{Binding EditCommand}"
                    Margin="12,0,0,0"
                    Style="{StaticResource ActionButtonStyle}" 
                    Background="{DynamicResource HotelAccentBrush}" 
                    Foreground="{DynamicResource HotelPrimaryBrush}"
                    Width="100"
                    Height="45"/>

            <Button Content="Delete"
                    Command="{Binding DeleteCommand}"
                    Margin="12,0,0,0"
                    Style="{StaticResource ActionButtonStyle}" 
                    Background="#CC0000" 
                    Foreground="{DynamicResource HotelForegroundBrush}"
                    Width="100"
                    Height="45"/>
        </StackPanel>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Items}"
                  SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                  Style="{StaticResource HotelDataGridStyle}" 
                  AutoGenerateColumns="False"
                  IsReadOnly="True" 
                  Margin="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding CustomerID}" Width="70"/>
                <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                <DataGridTextColumn Header="Phone" Binding="{Binding Telephone}" Width="150"/>
                <DataGridTextColumn Header="Birthday" Binding="{Binding Birthday, StringFormat='{}{0:d}'}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>