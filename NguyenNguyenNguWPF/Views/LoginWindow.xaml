<Window x:Class="NguyenNguyenNguWPF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Login" 
        Height="480" Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="Transparent">

    <Window.Resources>

        <Color x:Key="HotelPrimaryColor">#0E0F12</Color>
        <SolidColorBrush x:Key="HotelPrimaryBrush" Color="{StaticResource HotelPrimaryColor}"/>

        <Color x:Key="HotelAccentColor">#D4AF37</Color>
        <SolidColorBrush x:Key="HotelAccentBrush" Color="{StaticResource HotelAccentColor}"/>

        <Color x:Key="HotelHighlightColor">#00B2A9</Color>
        <SolidColorBrush x:Key="HotelHighlightBrush" Color="{StaticResource HotelHighlightColor}"/>

        <Color x:Key="HotelForegroundColor">#E0E0E0</Color>
        <SolidColorBrush x:Key="HotelForegroundBrush" Color="{StaticResource HotelForegroundColor}"/>

        <Color x:Key="HotelDisabledColor">#555555</Color>
        <SolidColorBrush x:Key="HotelDisabledBrush" Color="{StaticResource HotelDisabledColor}"/>

        <Color x:Key="HotelBorderColor">#333333</Color>
        <SolidColorBrush x:Key="HotelBorderBrush" Color="{StaticResource HotelBorderColor}"/>

        <Color x:Key="HotelGlassPanelColor">#202125</Color>
        <SolidColorBrush x:Key="HotelGlassPanelBrush" Color="{StaticResource HotelGlassPanelColor}"/>

        <CornerRadius x:Key="HotelCornerRadius">12</CornerRadius>
        <CornerRadius x:Key="HotelSmallCornerRadius">6</CornerRadius>

        <DropShadowEffect x:Key="HotelSoftShadow"
                          Color="#000000"
                          Direction="270"
                          ShadowDepth="5"
                          BlurRadius="10"
                          Opacity="0.4"/>

        <Style x:Key="HotelButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{StaticResource HotelHighlightBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource HotelPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource HotelHighlightBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect" Value="{StaticResource HotelSoftShadow}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{StaticResource HotelSmallCornerRadius}"
                                Padding="{TemplateBinding Padding}"
                                Effect="{TemplateBinding Effect}"
                                x:Name="ButtonBorder">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{StaticResource HotelAccentBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource HotelPrimaryBrush}"/>
                                <Setter TargetName="ButtonBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="{StaticResource HotelAccentColor}" Direction="270" ShadowDepth="8" BlurRadius="15" Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{StaticResource HotelAccentBrush}"/>
                                <Setter TargetName="ButtonBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="{StaticResource HotelAccentColor}" Direction="270" ShadowDepth="2" BlurRadius="5" Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{StaticResource HotelDisabledBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource HotelBorderBrush}"/>
                                <Setter TargetName="ButtonBorder" Property="Effect" Value="{x:Null}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HotelTextBoxStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="{StaticResource HotelGlassPanelBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource HotelForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource HotelBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{StaticResource HotelSmallCornerRadius}"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource HotelHighlightBrush}"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource HotelHighlightBrush}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HotelPasswordBoxStyle" TargetType="{x:Type PasswordBox}">
            <Setter Property="Background" Value="{StaticResource HotelGlassPanelBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource HotelForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource HotelBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type PasswordBox}">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{StaticResource HotelSmallCornerRadius}"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource HotelHighlightBrush}"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource HotelHighlightBrush}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HotelHeaderButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>

            <Setter Property="Foreground" Value="{StaticResource HotelForegroundBrush}"/>

            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                x:Name="ButtonBorder">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#FF4C4C"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#CC0000"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{StaticResource HotelForegroundBrush}"/>
        </Style>

    </Window.Resources>

    <Border CornerRadius="{StaticResource HotelCornerRadius}"
            Background="{StaticResource HotelPrimaryBrush}"
            BorderBrush="{StaticResource HotelAccentBrush}"
            BorderThickness="1">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Height="40" Background="{StaticResource HotelGlassPanelBrush}"
                  MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">

                <TextBlock Text="FU MiniHotel Management"
                           Foreground="{StaticResource HotelAccentBrush}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="20,0,0,0"
                           FontSize="14"
                           FontWeight="SemiBold"/>

                <Button x:Name="CloseButton"
                        Click="CloseButton_Click"
                        Content="&#x2715;" 
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Width="40"
                        FontWeight="Bold"
                        Style="{StaticResource HotelHeaderButtonStyle}"/>
            </Grid>

            <Grid Grid.Row="1" Margin="30">
                <StackPanel VerticalAlignment="Center">

                    <TextBlock Text="WELCOME"
                               FontSize="38"
                               FontWeight="Light"
                               Foreground="{StaticResource HotelAccentBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>

                    <TextBlock Text="Email Address"
                               Foreground="{StaticResource HotelHighlightBrush}"
                               FontSize="14"
                               Margin="0,0,0,5"/>

                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource HotelTextBoxStyle}"
                             Margin="0,0,0,20"/>

                    <TextBlock Text="Password"
                               Foreground="{StaticResource HotelHighlightBrush}"
                               FontSize="14"
                               Margin="0,0,0,5"/>

                    <PasswordBox x:Name="pwd"
                                 PasswordChanged="PwdChanged"
                                 Style="{StaticResource HotelPasswordBoxStyle}"
                                 Margin="0,0,0,35"/>

                    <Button Content="LOGIN"
                            Command="{Binding LoginCommand}"
                            Style="{StaticResource HotelButtonStyle}"
                            Height="45"
                            Background="{StaticResource HotelAccentBrush}" 
                            Foreground="{StaticResource HotelPrimaryBrush}"
                            FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>