<Window x:Class="NguyenNguyenNguWPF.Views.CustomerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer" SizeToContent="WidthAndHeight" 
        WindowStartupLocation="CenterOwner"
        Background="#FF1E1E1E">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF2999A9"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="{x:Type Control}">
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Height" Value="32"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Style.Resources>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#FFCA9A31"/>
            <Setter Property="Foreground" Value="#FF1E1E1E"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Style.Resources>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="260"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Full name" Grid.Row="0" Grid.Column="0" Margin="0,8"/>
        <TextBox Text="{Binding FullName}" Grid.Row="0" Grid.Column="1" Margin="0,4"/>

        <TextBlock Text="Email" Grid.Row="1" Grid.Column="0" Margin="0,8"/>
        <TextBox Text="{Binding Email}" Grid.Row="1" Grid.Column="1" Margin="0,4"/>

        <TextBlock Text="Phone" Grid.Row="2" Grid.Column="0" Margin="0,8"/>
        <TextBox Text="{Binding Telephone}" Grid.Row="2" Grid.Column="1" Margin="0,4"/>

        <TextBlock Text="Birthday" Grid.Row="3" Grid.Column="0" Margin="0,8"/>
        <DatePicker SelectedDate="{Binding Birthday}" Grid.Row="3" Grid.Column="1" Margin="0,4"/>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Save" Width="100" IsDefault="True" Click="Save_Click" Style="{StaticResource PrimaryButton}"/>

            <Button Content="Cancel" Width="100" Margin="8,0,0,0" IsCancel="True" Style="{StaticResource SecondaryButton}"/>
        </StackPanel>
    </Grid>
</Window>