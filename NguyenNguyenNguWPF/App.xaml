<Application x:Class="NguyenNguyenNguWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Bạn có thể xóa xmlns:conv nếu không dùng converter nào khác -->
    <Application.Resources>
        <ResourceDictionary>

            <!-- 1. TÀI NGUYÊN GỐC (COLORS, BRUSHES, EFFECTS) -->
            <Color x:Key="HotelPrimaryColor">#0E0F12</Color>
            <SolidColorBrush x:Key="HotelPrimaryBrush" Color="{StaticResource HotelPrimaryColor}"/>
            <Color x:Key="HotelAccentColor">#D4AF37</Color>
            <SolidColorBrush x:Key="HotelAccentBrush" Color="{StaticResource HotelAccentColor}"/>
            <Color x:Key="HotelHighlightColor">#00B2A9</Color>
            <SolidColorBrush x:Key="HotelHighlightBrush" Color="{StaticResource HotelHighlightColor}"/>
            <Color x:Key="HotelForegroundColor">#E0E0E0</Color>
            <SolidColorBrush x:Key="HotelForegroundBrush" Color="{StaticResource HotelForegroundColor}"/>
            <Color x:Key="HotelDisabledColor">#555555</Color>
            <SolidColorBrush x:Key="HotelDisabledBrush" Color="{StaticResource HotelDisabledColor}"/>
            <Color x:Key="HotelBorderColor">#333333</Color>
            <SolidColorBrush x:Key="HotelBorderBrush" Color="{StaticResource HotelBorderColor}"/>
            <Color x:Key="HotelGlassPanelColor">#202125</Color>
            <SolidColorBrush x:Key="HotelGlassPanelBrush" Color="{StaticResource HotelGlassPanelColor}"/>

            <CornerRadius x:Key="HotelCornerRadius">12</CornerRadius>
            <CornerRadius x:Key="HotelSmallCornerRadius">6</CornerRadius>

            <DropShadowEffect x:Key="HotelSoftShadow"
                              Color="#000000"
                              Direction="270"
                              ShadowDepth="5"
                              BlurRadius="10"
                              Opacity="0.4"/>

            <!-- 2. STYLES -->
            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="Foreground" Value="{DynamicResource HotelForegroundBrush}"/>
            </Style>

            <Style x:Key="HotelButtonStyle" TargetType="{x:Type Button}">
                <Setter Property="Background" Value="{DynamicResource HotelHighlightBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource HotelPrimaryBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource HotelHighlightBrush}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="15,8"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Effect" Value="{DynamicResource HotelSoftShadow}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="{DynamicResource HotelSmallCornerRadius}" 
                                    Padding="{TemplateBinding Padding}"
                                    Effect="{TemplateBinding Effect}"
                                    x:Name="ButtonBorder">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource HotelAccentBrush}"/>
                                    <Setter Property="Foreground" Value="{DynamicResource HotelPrimaryBrush}"/>
                                    <Setter TargetName="ButtonBorder" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="{StaticResource HotelAccentColor}" Direction="270" ShadowDepth="8" BlurRadius="15" Opacity="0.6"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource HotelAccentBrush}"/>
                                    <Setter TargetName="ButtonBorder" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="{StaticResource HotelAccentColor}" Direction="270" ShadowDepth="2" BlurRadius="5" Opacity="0.8"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource HotelDisabledBrush}"/>
                                    <Setter Property="Foreground" Value="{DynamicResource HotelBorderBrush}"/>
                                    <Setter TargetName="ButtonBorder" Property="Effect" Value="{x:Null}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="HotelTextBoxStyle" TargetType="{x:Type TextBox}">
                <Setter Property="Background" Value="{DynamicResource HotelGlassPanelBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource HotelForegroundBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource HotelBorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="10,8"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type TextBox}">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="{DynamicResource HotelSmallCornerRadius}"
                                    SnapsToDevicePixels="True">
                                <ScrollViewer x:Name="PART_ContentHost" Focusable="False" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource HotelHighlightBrush}"/>
                                </Trigger>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource HotelHighlightBrush}"/>
                                    <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>


            <ResourceDictionary.MergedDictionaries>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Application.Resources>
</Application>

